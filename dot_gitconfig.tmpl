[alias]
	up = pull --rebase --autostash
    pr = !sh -c \"git fetch origin pull/${1}/head:pr/${1} && git checkout pr/${1}\"


[core]
    pager = delta
	editor = {{ .brew_prefix }}/bin/vim

[init]
	defaultBranch = main

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[push]
    autoSetupRemote = true
